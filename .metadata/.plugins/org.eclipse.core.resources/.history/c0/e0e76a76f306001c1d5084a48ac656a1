package day19_DB;

import java.util.ArrayList;
import java.util.Scanner;

public class MainClass {
	public static void main(String[] args) {
		DBClass db = new DBClass(); // DBClass 객체 생성 -> 생성자 호출
		Scanner sc = new Scanner(System.in);
		int num;
		while(true) {
			System.out.println("1.등록 2.전체보기 3.삭제 4.수정");
			System.out.print(">>> ");
			num = sc.nextInt();
			System.out.println();
			switch(num) {
			case 1 :
				break;
			case 2 :
				ArrayList<StudentDTO> list = db.getUsers();
				if(list.size() == 0) {
					System.out.println("저장된 데이터가 없습니다.");
				}else {
					System.out.println("--------------------------");
					for(int i = 0; i < list.size(); i++) {
						System.out.println("학번 : " + list.get(i).getStNum());
						System.out.println("이름 : " + list.get(i).getStName());
						System.out.println("나이 : " + list.get(i).getAge());
						System.out.println("--------------------------");
					}
				}
				break;
			case 3 :
				break;
			case 4 :
				break;
			default :
				System.out.println("다시 입력해주세요\n");
			}
		}
	}
}
